<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="2dp"
        android:elevation="2dp">

        <RelativeLayout
            android:id="@+id/view_foreground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:text="Falcon Heavy"
                android:textStyle="bold"
                android:fontFamily="@font/notosans"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/item_price_cf"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.1149"
                android:background="@drawable/my_button_bg"
                android:textStyle="bold"
                android:layout_marginRight="12dp"
                android:fontFamily="@font/opensans"
                android:layout_marginTop="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="16sp"
                android:textColor="#fff"/>

            <View
                android:layout_toLeftOf="@id/shelf_no_cf"
                android:layout_centerVertical="true"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="12dp"
                android:layout_below="@+id/itemName"
                android:background="#a6a6a6"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/shelf_no_cf"
                android:layout_below="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_centerHorizontal="true"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:fontFamily="@font/notosans"
                android:textSize="16sp"
                android:text="Floor 2, Shelf-21B"/>

            <View
                android:layout_toRightOf="@id/shelf_no_cf"
                android:layout_centerVertical="true"
                android:layout_marginTop="18dp"
                android:layout_marginRight="12dp"
                android:layout_below="@+id/itemName"
                android:background="#a6a6a6"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>

            <ImageView
                android:id="@+id/remove_item_cf"
                android:padding="8dp"
                android:tint="@color/pshyGreen"
                android:src="@drawable/ic_remove_circle_black_24dp"
                android:layout_below="@+id/shelf_no_cf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/count_text_cf"
                android:layout_below="@+id/shelf_no_cf"
                android:layout_toRightOf="@+id/remove_item_cf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:fontFamily="@font/opensans"
                android:textSize="16sp"
                android:text="13"/>

            <ImageView
                android:id="@+id/add_item_cf"
                android:padding="8dp"
                android:layout_toRightOf="@+id/count_text_cf"
                android:tint="@color/pshyGreen"
                android:src="@drawable/ic_add_circle_black_24dp"
                android:layout_below="@+id/shelf_no_cf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:layout_below="@+id/shelf_no_cf"
                android:id="@+id/checkBox"
                android:layout_toLeftOf="@id/deleteBtn"
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:button="@drawable/ic_check_box_black_24dp" />

            <ImageView
                android:layout_below="@+id/shelf_no_cf"
                android:id="@+id/deleteBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:src="@drawable/ic_delete"
                android:tint="@color/burgandyRed"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>
