<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/sr_root_layout"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layer1_sr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">

        <RelativeLayout
            android:id="@+id/image_layer_sr"
            android:layout_width="140dp"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/image_sr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_image_black_24dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/search_item_name_sr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/image_layer_sr"
            android:fontFamily="@font/opensans"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:text="Linc Glycer, Ball pens"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/search_item_price_temp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_item_name_sr"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/image_layer_sr"
            android:fontFamily="@font/notosans"
            android:paddingLeft="8dp"
            android:text="Rs."
            android:textColor="@color/burgandyRed"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/search_item_price_sr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_item_name_sr"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/search_item_price_temp5"
            android:fontFamily="@font/notosans"
            android:paddingRight="8dp"
            android:text="1149"
            android:textColor="@color/burgandyRed"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/search_product_temp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_item_price_sr"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/image_layer_sr"
            android:fontFamily="@font/notosans"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Get it at "
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/search_product_floor_sr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_item_price_sr"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/search_product_temp3"
            android:fontFamily="@font/notosans"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingRight="8dp"
            android:paddingBottom="5dp"
            android:text="Floor 2, Shelf-21B"
            android:textColor="@color/pshyGreen"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!--        <View-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="1dp"-->
        <!--            android:layout_below="@+id/search_item_price_sr"-->
        <!--            android:layout_centerVertical="true"-->
        <!--            android:layout_marginTop="15dp"-->
        <!--            android:layout_marginRight="12dp"-->
        <!--            android:layout_toRightOf="@id/search_product_floor_sr"-->
        <!--            android:background="#a6a6a6"-->
        <!--            android:paddingBottom="5dp" />-->

        <TextView
            android:id="@+id/description_sr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_product_floor_sr"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/image_layer_sr"
            android:fontFamily="@font/notosans"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Description"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/search_item_description_sr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_sr_text"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/image_layer_sr"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Long description of the product provided by the seller..."
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/add_to_list_sr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_item_description_sr"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/my_button_bg"
            android:fontFamily="@font/notosans"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:paddingRight="12dp"
            android:paddingBottom="5dp"
            android:text="Add to list"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layer1_sr"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="0dp"
        android:background="@color/lightGrey" />

</RelativeLayout>